<div class="jumbotron">
<div class="row">
  <div class="col-md-8">
  <% @wikis.each do |wiki| %>
  <% if (current_user.admin? || current_user.premium? || wiki.users.include?(current_user)) || !(wiki.private?) %>
     <h3><%= markdown(wiki.title)%></h3>
     <p><%= markdown(wiki.body) %></p>
     <%= link_to "Edit", edit_wiki_path(wiki), class: 'btn btn-success' %>
     <%= link_to "Delete", wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
   <% end %>
   <% end %>
  </div>
</div>
</div>
